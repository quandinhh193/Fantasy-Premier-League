<script>
/* ------------------------
   CONFIGURATION / CONTENT
   ------------------------
   - logo: replace the src of #brandLogo with a local filename (same folder) or a URL.
   - finalMessages: array of allowed final reveal texts. Edit these to change the final message.
   IMPORTANT: do NOT remove the visible PRANK badge or impersonate real support pages.
*/
const finalMessages = [
  "Prank complete â€” no real refund occurred. Gotcha! ðŸ˜„",
  "Joke revealed: This was only a simulator. No money changed hands.",
  "All done â€” this was a harmless prank. Maybe buy your friend a coffee instead â˜•"
];

// You may change the index for a default message here (0..finalMessages.length-1)
const defaultFinalIndex = 0;

/* ------------------------
   END CONFIG
   ------------------------ */

const form = document.getElementById('prankForm');
const panel = document.getElementById('panel');
const bar = document.getElementById('bar');
const status = document.getElementById('status');
const finalBox = document.getElementById('finalBox');
const submitBtn = document.getElementById('submitBtn');
const resetBtn = document.getElementById('resetBtn');

const steps = [
  {text: 'Validating purchase record...', delay: 800},
  {text: 'Verifying account details...', delay: 1100},
  {text: 'Contacting payment gateway...', delay: 1300},
  {text: 'Processing refund...', delay: 1000},
  {text: 'Finalizing transaction...', delay: 900},
];

function handleSubmit(e){
  e.preventDefault();
  // simple HTML5 validation
  if(!form.reportValidity()) return;

  // show panel and start simulation
  panel.style.display = 'block';
  panel.setAttribute('aria-hidden','false');
  finalBox.style.display = 'none';
  bar.style.width = '0%';
  status.textContent = 'Starting...';
  submitBtn.disabled = true;
  submitBtn.textContent = 'Processing...';

  simulateProgress().then(() => {
    // show final message
    finalBox.textContent = finalMessages[defaultFinalIndex] || finalMessages[0];
    finalBox.style.display = 'block';
    status.textContent = 'Completed';
    submitBtn.disabled = false;
    submitBtn.textContent = 'Submit';
  });
}

function simulateProgress(){
  return new Promise((resolve) => {
    let total = 0;
    let stepIndex = 0;
    const totalSteps = steps.length;

    function nextStep(){
      if(stepIndex >= totalSteps){
        bar.style.width = '100%';
        setTimeout(resolve, 600);
        return;
      }
      const s = steps[stepIndex];
      status.textContent = s.text;
      total += Math.round(100/totalSteps);
      bar.style.width = Math.min(total, 98) + '%';
      stepIndex++;
      setTimeout(nextStep, s.delay + Math.random()*500);
    }
    // slight initial delay to look natural
    setTimeout(nextStep, 300 + Math.random()*300);
  });
}

resetBtn.addEventListener('click', function(){
  form.reset();
  panel.style.display = 'none';
  panel.setAttribute('aria-hidden','true');
  bar.style.width = '0%';
  finalBox.style.display = 'none';
});

// Accessibility: allow Enter on inputs to submit
form.addEventListener('keydown', function(ev){
  if(ev.key === 'Enter' && ev.target.tagName !== 'TEXTAREA'){
    ev.preventDefault();
    handleSubmit(new Event('submit'));
  }
});
</script>
