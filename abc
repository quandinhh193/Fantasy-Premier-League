<script>
(function(){
  const submitBtn = document.getElementById('submitBtn');
  const resetBtn = document.getElementById('resetBtn');
  const panel = document.getElementById('panel');
  const bar = document.getElementById('bar');
  const status = document.getElementById('status');
  const form = document.getElementById('simForm');

  const steps = [
    {text: 'Validating purchase record...', delay: 900},
    {text: 'Verifying account details...', delay: 1200},
    {text: 'Contacting payment gateway...', delay: 1300},
    {text: 'Processing refund...', delay: 1100},
    {text: 'Finalizing transaction...', delay: 1000},
  ];

  // safe final message page path (in same folder)
  const resultPage = 'prank-result.html';

  function simulateProgressAndRedirect() {
    panel.style.display = 'block';
    panel.setAttribute('aria-hidden','false');
    bar.style.width = '0%';
    status.textContent = 'Starting...';

    let total = 0;
    const totalSteps = steps.length;
    let stepIndex = 0;

    function nextStep(){
      if(stepIndex >= totalSteps) {
        // finish â†’ small pause then redirect to result page
        bar.style.width = '100%';
        status.textContent = 'Completed';
        setTimeout(()=> {
          // Optionally pass some safe query info like ?name=... (we won't pass sensitive data)
          // Redirect to result page
          window.location.href = resultPage + '?prank=1';
        }, 700);
        return;
      }
      const s = steps[stepIndex];
      status.textContent = s.text;
      total += Math.round(100/totalSteps);
      bar.style.width = Math.min(total, 98) + '%';
      stepIndex++;
      setTimeout(nextStep, s.delay + Math.random()*400);
    }

    setTimeout(nextStep, 300 + Math.random()*300);
  }

  submitBtn.addEventListener('click', function(){
    if(!form.reportValidity()) return;
    submitBtn.disabled = true;
    submitBtn.textContent = 'Processing...';
    simulateProgressAndRedirect();
  });

  resetBtn.addEventListener('click', function(){
    form.reset();
    panel.style.display = 'none';
    panel.setAttribute('aria-hidden','true');
    bar.style.width = '0%';
    submitBtn.disabled = false;
    submitBtn.textContent = 'Submit';
  });
})();
</script>
