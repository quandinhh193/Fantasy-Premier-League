    <!-- This panel remains hidden until submit; no visible lines under buttons before submit -->
    <div class="panel" id="panel" aria-hidden="true">
      <div class="progress"><i id="bar" style="width:0%"></i></div>
      <div class="status" id="status">Queued...</div>
